    <% var a = obj.data[0].meta.timezone %>
        <script>
            setInterval(() => {
                var objToday = new Date();
                // var objToday = convertTZ(date, "<%- a %>");
                var time = objToday.toLocaleString('en-US', {
                    timeZone: "<%- a %>"
                });
                var unicode = '&#9203';
                var arr = time.split(",");
                var weekday = new Array('Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'),
                    dayOfWeek = weekday[objToday.getDay()],
                    domEnder = function() {
                        var a = objToday;
                        if (/1/.test(parseInt((a + "").charAt(0)))) return "th";
                        a = parseInt((a + "").charAt(1));
                        return 1 == a ? "st" : 2 == a ? "nd" : 3 == a ? "rd" : "th"
                    }(),
                    dayOfMonth = today + (objToday.getDate() < 10) ? '0' + objToday.getDate() + domEnder : objToday.getDate() + domEnder,
                    months = new Array('Jan', 'Feb', 'Mar', 'Apr', 'May', 'June', 'July', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'),
                    curMonth = months[arr[0].split("/")[0]];
                var today = `${dayOfWeek} | ${curMonth} ${dayOfMonth} | ${unicode} ${arr[1].split(" ")[1].split(":")[0]}:${arr[1].split(" ")[1].split(":")[1]}:${arr[1].split(" ")[1].split(":")[2]} ${arr[1].split(" ")[2]}`;
                // document.write(today);
                document.getElementById("Date").innerHTML = today;
            }, 1000);
